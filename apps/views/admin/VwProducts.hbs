<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="table-header text-center">Manage post</h1>
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Post table</h6>
          <a href="/admin/manage-post/add"><button type="button" class="btn btn-success ml-2"><i
                class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add Post</button></a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th width="20%">Tên</th>
                  <th width="15%">Giá</th>
                  <th width="15%">Trạng thái</th>
                  <th width="15%">Tổng số lượng</th>
                  <th width="15%">Tổng tồn kho</th>
                  <th width="10%">Số lượng bán</th>
                  <th width="10%">Chỉnh sửa</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th width="20%">Tên</th>
                  <th width="15%">Giá</th>
                  <th width="15%">Loại sản phẩm</th>
                  <th width="15%">Tổng số lượng</th>
                  <th width="15%">Tổng tồn kho</th>
                  <th width="10%">Số lượng bán</th>
                  <th width="10%">Chỉnh sửa</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each list}}
                <tr>
                  <td>{{ten}}</td>
                  <td>{{gia}}</td>
                  <td>{{loaisp}}</td>
                  <td>{{tongsoluong}}</td>
                  <td>{{tongtonkho}}</td>
                  <td>{{soluongcotheban}}</td>
                  <td class="text-center">
                    <button onclick="ChangeToDetail({{id}})" type="button" class="btn btn-cat-control" id="btnCatEdit">
                      <i class="fas fa-info-circle"></i>
                    </button>
                    <button onclick="ChangeToEdit({{id}}) " type="button" class="btn btn-cat-control" id="btnCatEdit">
                      <i class="fas fa-pen"></i>
                    </button>
                    <button onclick="functionConfirm({{id}})" type="button" class="btn btn-cat-control"
                      id="btnCatRemove">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script type="text/javascript">
  function functionConfirm(id) {
    if (confirm("Are you sure delete?")) {
      window.location.replace("/admin/manage-post/delete?id=" + id);
      return true;
    }
    return false;
  }

  function ChangeToEdit(id) {
    window.location.replace("/admin/manage-post/edit/" + id);
  }

  function ChangeToDetail(id) {
    window.location.replace("/admin/manage-post/detail/" + id);
  }
</script>