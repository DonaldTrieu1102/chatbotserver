<main class="main-content bgc-grey-100">
  <div id="mainContent">
    <div class="container-fluid">
      <h1 class="table-header text-center">Manage order</h1>
      <div class="card shadow mb-4">
        <div class="card-header py-3">
          <h6 class="m-0 font-weight-bold text-primary">Order table</h6>
          <a href="/admin/orders/add"><button type="button" class="btn btn-success ml-2"><i
                class="fas fa-plus-circle mr-1" style="color:#ffffff;"></i>Add order</button></a>
        </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered text-center" id="dataTable" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th width="15%">Mã hóa đơn</th>
                  <th width="15%">Tên khách hàng</th>
                  <th width="15%">Địa chỉ khách hàng</th>
                  <th width="15%">SĐT khách hàng</th>
                  <th width="15%">Tổng giá</th>
                  <th width="10%">Thời gian tạo</th>
                  <th width="20%">Chỉnh sửa</th>
                </tr>
              </thead>
              <tfoot>
                <tr>
                  <th width="15%">Mã hóa đơn</th>
                  <th width="15%">Tên khách hàng</th>
                  <th width="15%">Địa chỉ khách hàng</th>
                  <th width="15%">SĐT khách hàng</th>
                  <th width="15%">Tổng giá</th>
                  <th width="10%">Thời gian tạo</th>
                  <th width="20%">Chỉnh sửa</th>
                </tr>
              </tfoot>
              <tbody>
                {{#each list}}
                <tr>
                  <td width="15%">{{MaHoaDon}}</td>
                  <td>{{TenKhachHang}}</td>
                  <td>{{DiaChiKhachHang}}</td>
                  <td>{{SDTKhachHang}}</td>
                  <td>{{TongGia}}</td>
                  <td>{{moment thoigiantao format="DD/MM/YYYY"}}</td>
                  <td class="text-center">
                    <button onclick="ChangeToDetail({{MaHoaDon}})" type="button" class="btn btn-cat-control" id="btnCatEdit">
                      <i class="fas fa-info-circle"></i>
                    </button>
                    <button onclick="ChangeToEdit({{MaHoaDon}})" type="button" class="btn btn-cat-control" id="btnCatEdit">
                      <i class="fas fa-pen"></i>
                    </button>
                    <button onclick="functionConfirm({{MaHoaDon}})" type="button" class="btn btn-cat-control"
                      id="btnCatRemove">
                      <i class="fas fa-trash"></i>
                    </button>
                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
<script type="text/javascript">
  function functionConfirm(id) {
    if (confirm("Are you sure delete?")) {
      window.location.replace("/admin/orders/delete?id=" + id);
      return true;
    }
    return false;
  }

  function ChangeToEdit(id) {
    window.location.replace("/admin/orders/edit?id=" + id);
  }

  function ChangeToDetail(id) {
    window.location.replace("/admin/orders/detail?id=" + id);
  }
</script>